<!-- Page Title -->
<div class="section section-breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><%= current_page.data.title %></h1>
      </div>
    </div>
  </div>
</div>
<!-- End Page Title -->

<!-- Call to Action Bar -->
<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="jumbotron">
					<p class="text-justify">
						<strong><%= data.contact.long_name %></strong> <%= current_page.data.description %>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Call to Action Bar -->

<% current_page.data.services.each do |service| %>
  <div class="section">
    <div class="container">
    	<div class="row service-wrapper-row">
  			<div class="col-md-12">
  		    <h2><%= service.name %></h2>
			<h4><%= service.description %></h4>
        </div>
		<% if service.subservices %>
	        <% service.subservices.each do |subservice| %>
	          <div class="row service-wrapper-row">
	            <div class="col-sm-3">
	              <div>
	                <% link_to subservice.href, :target => '_blank' do %>
	                <%= image_tag(subservice.image, resize_to: '288x165', alt: subservice.name, :class => 'service-image') %>
	                <% end %>
	              </div>
	            </div>
	            <div class="col-sm-9">
	              <h3><%= subservice.name %></h3>
	              <p class="text-justify">
	                <%= subservice.description %>
	              </p>
	              <% link_to 'mailto:'+data.contact.email, :query => { :subject => current_page.data.mail.subject, :body => current_page.data.mail.body }, :class => 'btn btn-info' do %>
	                <i class="fa fa-envelope" aria-hidden="true"></i> Solicitar ayuda
	              <% end %>
	              <% if subservice.links %>
		              <% subservice.links.each do |link| %>
		                <% link_to link.href, :class => 'btn btn-default', :target => '_blank' do %>
		                  <i class=link.icon aria-hidden="true"></i> <%= link.name %>
		                <% end %>
		              <% end %>
	              <% end %>
	            </div>
	  		  </div>
			<% end %>
		<% end %>
      </div>
    </div>
  </div>
<% end %>
