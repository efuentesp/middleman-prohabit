<%= partial 'partials/head' %>
<%= partial 'partials/header' %>
<div class="section">
	<div class="container">
		<div class="row">
			<!-- Product Image & Available Colors -->
			<div class="col-sm-6">
				<div class="product-image-large">
					<img src="img/product3.jpg" alt="<%= current_page.title %>">
				</div>
			</div>
			<!-- End Product Image & Available Colors -->
			<!-- Product Summary & Options -->
			<div class="col-sm-6 product-details">
				<h4><%= current_page.title %></h4>
				<div class="price">
					<span class="price-was"></span> <%= current_page.data.price %>
				</div>
				<h5>Resúmen</h5>
				<p>
					<%= current_page.data.description %>
				</p>
				<p><b>Categoria:</b> <%= current_page.data.category %></p>
				<p><b>Tipo:</b> <%= current_page.data.type %></p>
				<p><b>Estatus:</b> <%= current_page.data.status %></p>
				<p><b>Precio:</b> <%= current_page.data.price %></p>
				<p><b>Tamaño:</b> <%= current_page.data.m2 %> m2 - <b>Recamaras:</b> <%= current_page.data.bedrooms %> - <b>Baños:</b> <%= current_page.data.bathrooms %> - <b>Estacionamientos:</b> <%= current_page.data.garages %></p>
			</div>
			<!-- End Product Summary & Options -->
			
			<!-- Full Description & Specification -->
			<div class="col-sm-12">
				<div class="tabbable">
					<!-- Tabs -->
					<ul class="nav nav-tabs product-details-nav">
						<li class="active"><a href="#tab1" data-toggle="tab">Descripción</a></li>
						<li><a href="#tab2" data-toggle="tab">Specification</a></li>
					</ul>
					<!-- Tab Content (Full Description) -->
					<div class="tab-content product-detail-info">
						<div class="tab-pane active" id="tab1">
							<%= yield %>
						</div>
						<!-- Tab Content (Specification) -->
						<div class="tab-pane" id="tab2">
							<table>
								<tr>
									<td>Total sensor Pixels (megapixels)</td>
									<td>Approx. 16.7</td>
								</tr>
								<tr>
									<td>Effective Pixels (megapixels)</td>
									<td>Approx. 16.1</td>
								</tr>
								<tr>
									<td>Automatic White Balance</td>
									<td>YES</td>
								</tr>
								<tr>
									<td>White balance: preset selection</td>
									<td>Daylight, Shade, Cloudy, Incandescent, Fluorescent, Flash</td>
								</tr>
								<tr>
									<td>White balance: custom setting</td>
									<td>YES</td>
								</tr>
								<tr>
									<td>White balance: types of color temperature</td>
									<td>YES (G7 to M7,15-step) (A7 to B7,15-step)</td>
								</tr>
								<tr>
									<td>White balance bracketing</td>
									<td>NO</td>
								</tr>
								<tr>
									<td>ISO Sensitivity Setting</td>
									<td>ISO100 - 25600 equivalent</td>
								</tr>
							</table>
						</div>
					</div>
				</div>
			</div>
			<!-- End Full Description & Specification -->
		</div>
	</div>
</div>
<%= partial 'partials/footer' %>
<%= partial 'partials/foot' %>