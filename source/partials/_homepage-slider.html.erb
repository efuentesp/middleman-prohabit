<!-- Homepage Slider -->
<div class="homepage-slider">
  <div id="sequence">
    <ul class="sequence-canvas">
      <% blog('products').articles.each do |product| %>
        <!-- Slide -->
        <li class="bg4">
          <!-- Slide Title -->
          <h2 class="title"><%= product.title %> <br/> <span class="label label-success"><%= product.data.price %></span></h2>
          <!-- Slide Text -->
          <h3 class="subtitle"><%= product.data.description %></h3>
          <!-- Slide Image -->
          <%= image_tag(product.data.main_image, alt: product.title, :class => 'slide-img') %>
        </li>
        <!-- End Slide -->    
      <% end %>
    </ul>
    <div class="sequence-pagination-wrapper">
      <ul class="sequence-pagination">
        <li>1</li>
        <li>2</li>
        <li>3</li>
      </ul>
    </div>
  </div>
</div>
<!-- End Homepage Slider -->
