<div class="section">
  <div class="container">
    <h2>Vivienda Nueva</h2>
    <br/>
    <% blog('products').articles.each do |product| %>
        <div class="row">
        <!-- Image Column -->
        <div class="col-sm-6">
          <div class="portfolio-item">
            <div class="portfolio-image">
            <% link_to product.url do %>
              <%= image_tag(product.data.main_image, alt: product.title) %>
            <% end %>
            </div>
          </div>
        </div>
        <!-- End Image Column -->
        <!-- Project Info Column -->
        <div class="portfolio-item-description col-sm-6">
          <br/>
          <% link_to product.url do %>
            <h3><%= product.title %></h3>
          <% end %>
          <p><%= product.data.address %>. <%= product.data.city %></p>
          <p><strong><%= product.data.price %></strong></p>
          <p>
            <%= truncate(product.data.description, :length => 500) %>
          </p>
          <ul class="no-list-style">
            <li><b>Categoria:</b> <%= product.data.category %></li>
            <li><b>Tipo:</b> <%= product.data.type %></li>
            <li><b>Estatus:</b> <%= product.data.status %></li>
            <li><b>Precio:</b> <%= product.data.price %></li>
            <li><b>Tama침o:</b> <%= product.data.m2 %> m2 - <b>Recamaras:</b> <%= product.data.bedrooms %> - <b>Ba침os:</b> <%= product.data.bathrooms %> - <b>Estacionamientos:</b> <%= product.data.garages %></li>
            <li class="portfolio-visit-btn"><%= link_to 'M치s Informaci칩n', product.url, :class => 'btn' %></li>
          </ul>
        </div>
        <!-- End Project Info Column -->
        </div>
    <% end %>
  </div>
</div>
