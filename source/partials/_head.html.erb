<!doctype html>
<html itemscope="" itemtype="http://schema.org/WebPage" lang="<%= data.site.language %>">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= page_title %></title>

    <meta name="description" content="<%= page_description %>">
    <meta name="robots" context="index,follow">

    <!-- Open Graph General (Facebook & Pinterest) -->
    <meta property="og:url" content="<%= current_page_url %>">
    <meta property="og:title" content="<%= page_title %>">
    <meta property="og:description" content="<%= page_description %>">
    <meta property="og:site_name" content="<%= data.site.name %>">
    <meta property="og:image" content="<%= data.site.logo_image_path %>">
    <meta property="og:app_id" content="952268334783316">
    <meta property="og:type" content="website">
    <!-- Twitter -->
    <meta name="twitter:card" content="<%= page_twitter_card_type %>">
    <meta name="twitter:site" content="<%= data.site.twitter_handle %>">
    <meta name="twitter:title" content="<%= page_title %>">
    <meta name="twitter:description" content="<%= page_description %>">
    <meta name="twitter:creator" content="<%= data.site.twitter_handle %>">
    <meta name="twitter:image:src" content="<%= data.site.logo_image_path %>">
    <!-- Google Plus -->
    <meta itemprop="name" content="<%= page_title %>">
    <meta itemprop="description" content="<%= page_description %>">
    <meta itemprop="image" content="<%= data.site.logo_image_path %>">

    <% if current_page.data.preferred_url %>
      <%= link_to current_page.data.preferred_url, :rel => 'caconical' %>
    <% end %>

    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,700,600,800" rel="stylesheet" type="text/css"/>
    <%= favicon_tag '/images/favicon-32x32.png' %>
    <%= favicon_tag '/images/favicon-32x32.png', :rel => 'apple-touch-icon', :type => 'image/png' %>

    <%= stylesheet_link_tag :site %>
  </head>

  <body class="<%= page_classes %>">
